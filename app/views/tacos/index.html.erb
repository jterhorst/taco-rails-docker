<p id="notice"><%= notice %></p>

<h1>Tacos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Cheese</th>
      <th>Lettuce</th>
      <th>Meat</th>
      <th>Tortilla</th>
      <th>Beans</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tacos.each do |taco| %>
      <tr>
        <td><%= taco.name %></td>
        <td><%= taco.price %></td>
        <td><%= taco.description %></td>
        <td><%= taco.cheese %></td>
        <td><%= taco.lettuce %></td>
        <td><%= taco.meat %></td>
        <td><%= taco.tortilla %></td>
        <td><%= taco.beans %></td>
        <td><%= link_to 'Show', taco %></td>
        <td><%= link_to 'Edit', edit_taco_path(taco) %></td>
        <td><%= link_to 'Destroy', taco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

